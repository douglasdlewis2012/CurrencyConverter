             android:layout_height="match_parent"
             android:paddingLeft="8dp"
             android:paddingRight="8dp"
             android:paddingTop="15dp"
              android:orientation="vertical">




        <include
            layout="@layout/country_amount_view"
            android:layout_width="match_parent"
